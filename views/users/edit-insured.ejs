<!DOCTYPE html>
<%- include('../partials/head') %>
<body class="layout-light side-menu">
   <%- include('../partials/header') %>
   <main class="main-content">
      <%- include('../partials/sidebar') %>
      <div class="contents">

         <div class="container-fluid">
            <div class="row">
               <div class="col-lg-12">

                  <div class="breadcrumb-main">
                     <h4 class="text-capitalize breadcrumb-title">Edit Insured</h4>
                     <div class="breadcrumb-action justify-content-center flex-wrap">
                        <nav aria-label="breadcrumb">
                           <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="/dashboard"><i class="uil uil-estate"></i>Dashboard</a></li>
                              <li class="breadcrumb-item"><a href="#">Transactions</a></li>
                              <li class="breadcrumb-item active" aria-current="page">Edit Insured</li>
                           </ol>
                        </nav>
                     </div>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-lg-6">
                  
                  <div class="card card-horizontal card-default card-md mb-4">
                     <div class="card-header">
                        <h6>Change Insured Informations</h6>
                     </div>
                     <div class="card-body py-md-30">
                        <div class="horizontal-form">
                           <form method="post">
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="name" class=" col-form-label color-dark fs-14 fw-500 align-center">Name</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="name" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="name" placeholder="<%= insured.name %>">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="nationality" class=" col-form-label color-dark fs-14 fw-500 align-center">Nationality</label>
                                 </div>
                                 <div class="col-sm-9 radio-theme-default custom-radio ">
                                    <% if (insured.nationality=="T.C") { %>
                                       <input class="radio" type="radio" name="nationality" value="T.C" id="radio-un2" checked>
                                       <label for="radio-un2">
                                          <span class="radio-text">T.C</span>
                                       </label>&nbsp&nbsp
                                       <input class="radio" type="radio" name="nationality" value="Others" id="radio-un4">
                                       <label for="radio-un4">
                                          <span class="radio-text">Others</span>
                                       </label>
                                    <% } else if(insured.nationality=="Others"){ %>
                                       <input class="radio" type="radio" name="nationality" value="T.C" id="radio-un2">
                                       <label for="radio-un2">
                                          <span class="radio-text">T.C</span>
                                       </label>&nbsp&nbsp
                                       <input class="radio" type="radio" name="nationality" value="Others" id="radio-un4" checked>
                                       <label for="radio-un4">
                                          <span class="radio-text">Others</span>
                                       </label>
                                    <% } %>
                                   
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="passport" class=" col-form-label color-dark fs-14 fw-500 align-center">T.C or Passport ID</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="passport" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="passport" placeholder="<%= insured.passport %>">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="birthdate" class=" col-form-label color-dark fs-14 fw-500 align-center">Birthdate</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="birthdate" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="birthdate" placeholder="<%= insured.birthdate %>">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="email" class="col-form-label  color-dark fs-14 fw-500 align-center">Email</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="email" class="form-control  ih-medium ip-gray radius-xs b-light px-15" 
                                    name="email" placeholder="<%= insured.email %>">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="phone" class=" col-form-label color-dark fs-14 fw-500 align-center">Phone Number</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="phone" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="phone" placeholder="<%= insured.phone %>">
                                 </div>
                              </div>
                              <div class="form-group row mb-0">
                                    <div class="layout-button mt-25">
                                       <button type="submit" class="btn btn-primary btn-default btn-squared px-30">Update</button>
                                    </div>
                              </div>
                           </form>
                        </div>
                     </div>
                     </div>
               </div>
            </div>
         </div>
      </div>
      <%- include('../partials/modal') %>
      <%- include('../partials/footer') %>
   </main>
   <%- include('../partials/script') %>
</body>
</html>