<!DOCTYPE html>
<%- include('../partials/head') %>
<body class="layout-light side-menu">
   <%- include('../partials/header') %>
   <main class="main-content">
      <%- include('../partials/sidebar') %>
      <div class="contents">

         <div class="container-fluid">
            <div class="row">
               <div class="col-lg-12">

                  <div class="breadcrumb-main">
                     <h4 class="text-capitalize breadcrumb-title">Register Expenses</h4>
                     <div class="breadcrumb-action justify-content-center flex-wrap">
                        <nav aria-label="breadcrumb">
                           <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="/dashboard"><i class="uil uil-estate"></i>Dashboard</a></li>
                              <li class="breadcrumb-item"><a href="#">Registrations</a></li>
                              <li class="breadcrumb-item active" aria-current="page">Register Expenses</li>
                           </ol>
                        </nav>
                     </div>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-lg-6">
                  
                  <div class="card card-horizontal card-default card-md mb-4">
                     <div class="card-header">
                        <h6>Expense Details</h6>
                     </div>
                     <div class="card-body py-md-30">
                        <div class="horizontal-form">
                           <% if (message) { %>
                              <div class=" alert alert-success d-flex justify-content-center" role="alert">
                                 <div class="alert-content">
                                       <p><%= message %></p>
                                 </div>
                              </div>
                           <% } %>
                           <form method="post">
                                 <div class="form-group row mb-25">
                                    <div class="col-sm-3 d-flex aling-items-center">
                                       <label for="month" class=" col-form-label color-dark fs-14 fw-500 align-center">Month</label>
                                    </div>
                                    <div class="col-sm-9">
                                       <select class="form-control px-15" name="month">
                                          <option>Select Month</option>
                                          <% for( let i = 0; i < month.length; i++ ) { %>
                                             <option value="<%= month[i].no %>"><%= month[i].name %></option>
                                          <% } %>
                                       </select>
                                    </div>
                                 </div>
                                 <% if (isAdmin && isManager) { %>
                                 <div class="form-group row mb-25">
                                    <div class="col-sm-3 d-flex aling-items-center">
                                       <label for="agency" class=" col-form-label color-dark fs-14 fw-500 align-center">Agency</label>
                                    </div>
                                 <div class="col-sm-9">
                                    <select class="form-control px-15" name="agency">
                                       <option>Select Agency</option>
                                       <% for( let i = 0; i < agency.length; i++ ) { %>
                                          <option value="<%= agency[i]._id %>"><%= agency[i].name %></option>
                                       <% } %>
                                    </select>
                                 </div>
                              </div>
                              <% } %>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="bill" class=" col-form-label color-dark fs-14 fw-500 align-center">Bill</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="bill" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="bill">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="rent" class=" col-form-label color-dark fs-14 fw-500 align-center">Rent</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="rent" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="rent">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="supply" class=" col-form-label color-dark fs-14 fw-500 align-center">Office Supplies</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="supply" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="supply">
                                 </div>
                              </div>
                              <div class="form-group row mb-25">
                                 <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="salary" class=" col-form-label color-dark fs-14 fw-500 align-center">Net Salary</label>
                                 </div>
                                 <div class="col-sm-9">
                                    <input type="salary" class="form-control ih-medium ip-gray radius-xs b-light px-15" 
                                    name="salary">
                                 </div>
                              </div>
                              <div class="form-group row mb-0">
                                    <div class="layout-button mt-25">
                                       <button type="reset" class="btn btn-default btn-squared btn-light px-20">Reset</button>
                                       <button type="submit" class="btn btn-primary btn-default btn-squared px-30">Register</button>
                                    </div>
                              </div>
                           </form>
                              </div>
                           
                        </div>
                     </div>
               </div>
            </div>
         </div>
      <%- include('../partials/modal') %>
      <%- include('../partials/footer') %>
   </main>
   <%- include('../partials/script') %>
</body>
</html>